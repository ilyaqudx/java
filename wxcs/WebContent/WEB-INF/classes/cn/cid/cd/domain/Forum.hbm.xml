<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.cid.cd.domain">
	<class name="Forum" table="t_forum">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="name"></property>
		<property name="discription"></property>
		<property name="clickTimes"></property>
		<property name="addTime" type="timestamp"></property>
		<many-to-one name="forumLogo" column="logo_id"/>
	</class>
</hibernate-mapping>